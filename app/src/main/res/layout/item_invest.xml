<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/login_field_background">

    <TextView
        android:id="@+id/title_invest_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="OL 1.0 Заказ №19878, OL-37885"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/project_title_color"/>

    <TextView
        android:id="@+id/description_invest_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ЯСНО. ФИНОГЕНОВ ЕВГЕНИЙ. МОНТАЖ 15 ДЕКАБРЯ И НЕ ЕБЕТ"
        android:textColor="@color/project_desc_color"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/fragment_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <TextView
            android:id="@+id/invest_share_user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owned_label"
            android:textColor="@color/project_desc_color"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/invest_share_user_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.5"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@color/light_text_color"
            android:textSize="12sp"/>

    </LinearLayout>


</LinearLayout>